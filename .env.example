APP_NAME="EduSphere"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=edusphere
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

MEMCACHED_HOST=127.0.0.1
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Multi-tenant Configuration
TENANT_IDENTIFICATION_METHOD=subdomain
TENANT_DOMAIN_PREFIX=subdomain
TENANT_DATABASE_PREFIX=edusphere_
TENANT_CACHE_TTL=3600

# Queue Configuration
QUEUE_CONNECTION=redis
HORIZON_BALANCE=simple
HORIZON_MAX_PROCESSES=10
HORIZON_MEMORY_LIMIT=512

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=edusphere

# Session Configuration for Multi-tenant
SESSION_DOMAIN=.edusphere.local

# File Storage
FILESYSTEM_DISK=local
# For production, use S3:
# FILESYSTEM_DISK=s3
# AWS_BUCKET=edusphere-uploads

# Backup Configuration
BACKUP_DISK=local
# For production, use S3:
# BACKUP_DISK=s3
BACKUP_NOTIFICATION_EMAIL=admin@edusphere.com
BACKUP_NOTIFICATION_ON_FAILURE=true

# JWT Configuration (for API authentication)
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160

# Passport Configuration (for API OAuth)
PASSPORT_CLIENT_ID=
PASSPORT_CLIENT_SECRET=

# Laravel Octane Configuration (Optional - for high performance)
OCTANE_SERVER=swoole
OCTANE_WORKERS=4
OCTANE_TASK_WORKERS=2
OCTANE_MAX_REQUESTS=500

# Spatie Permission Cache
PERMISSION_CACHE_EXPIRATION_TIME=86400

# Activity Log Configuration
ACTIVITY_LOGGER_ENABLED=true
ACTIVITY_LOG_CLEAN_OLDER_THAN_DAYS=90

# Application Specific Settings
SCHOOL_DEFAULT_SUBSCRIPTION_DAYS=365
SCHOOL_MAX_STUDENTS=1000
SCHOOL_MAX_TEACHERS=100

# Payment Gateway Configuration (if applicable)
PAYMENT_GATEWAY=stripe
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# SMS Gateway Configuration (if applicable)
SMS_PROVIDER=twilio
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# File Upload Limits
UPLOAD_MAX_SIZE=10240
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_MINUTE=120

# Development Tools
TELESCOPE_ENABLED=false
HORIZON_ENABLED=true

# Security
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,*.edusphere.local
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# Timezone Configuration
APP_TIMEZONE=UTC
# For Indian schools, use:
# APP_TIMEZONE=Asia/Kolkata

# Locale Configuration
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
# For Indian schools, you might want:
# APP_LOCALE=hi
# APP_FALLBACK_LOCALE=en

